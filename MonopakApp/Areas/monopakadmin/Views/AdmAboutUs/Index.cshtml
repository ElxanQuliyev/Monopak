@model IEnumerable<MonopakApp.Models.AboutU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/monopakadmin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AboutPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td width="25%">
            <img class="img-thumbnail" src="@item.AboutPhoto" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Header)
        </td>
        <td>
            @if (item.Description?.Length>0)
            {
                @Html.Raw(item.Description.Length > 200 ? item.Description.Substring(0, 200) : item.Description)
            }
        </td>
        <td>
            <a class="btn btn-warning" href="@Url.Action("Edit","AdmAboutUs",new { id=item.Id})">
                <i class="far fa-edit"></i>
            </a>&nbsp;&nbsp;&nbsp;
        </td>
    </tr>
}

</table>
