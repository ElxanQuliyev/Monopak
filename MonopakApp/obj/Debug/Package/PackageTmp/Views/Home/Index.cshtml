@model MonopakApp.ViewModels.HomeVm
@using MonopakApp.Helpers
@using MonopakApp.Models
@{
    ViewBag.Title = "Alüminium qablar, Kağız stəkanlar, Streç, Falqa,Fast Food Qablar, Tibbi təmizlik məhsulları";
    var firstCategory = Model.CategoryList[0];
    var secondCategory = Model.CategoryList[1];
    var thirdCategory = Model.CategoryList[2];
    var fifthCategory = Model.CategoryList[3];
    var sixthCategory = Model.CategoryList[4];
    var seventhCategory = Model.CategoryList[5];
}
<!-- Slider -->
<section id="Slider" class="d-flex align-items-center my-5">
    <div class="container-fluid">
        <div class="slide-middle">
            @{
                int slide = 0;
            }
            <div class="img-shd">
            </div>
            @foreach (TopSlider sld in Model.TopSlider)
            {
                <div class="slider-item @(slide==0 ? "slide-active" : "") ">

                    <div class="row justify-content-end mr-5">
                        <div class="col-lg-6 col-sm-10" style="position:relative">

                            <div class="slide-img" style="background:url(@sld.SliderPhoto) no-repeat center center/ contain">

                            </div>

                        </div>
                    </div>
                    <div class="slide-content ml-5 ">   
                        <h4>@sld.Description</h4>
                        @if (sld.Price != null)
                        {
                            <h5>@sld.Price Azn</h5>

                        }
                        <a class="btn btn-slide" href="@Url.Action("ProductList","Product")">Məhsulları Kəşf Et</a>
                    </div>
                </div>
                slide++;
            }

            <div class="btn btn-white btnMain">
                <i class="fas fa-chevron-down fa-3x"></i>
            </div>

        </div>


    </div>

</section>

<!--/ Slider -->
<!-- Category -->
<section id="Category">
    <div class="container-fluid">
        <div class="category-header">
            <h1 class="text-center my-5 hdmain">Kateqoriyalar </h1>
        </div>
        
        <div class="row ">
            @if (firstCategory != null)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:#00AEEF;">
                        <a class="text-white" href="@Url.Action("Productlist","Product",new { id=firstCategory.GenerateItemNameAsParam()})">
                            <div class="row align-items-center">
                                <img class="img-fluid" src="@firstCategory.CategoryPhoto" style="object-fit:cover;width:65%" alt="@firstCategory.Name">
                                <div class="p-2 pl-3">
                                    <div class="category-right text-md-left mt-5 mx-5">
                                        <h5 class="py-2">
                                            @firstCategory.Name
                                        </h5>
                                        <p><em>@firstCategory.Description</em></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            @if (secondCategory != null)
            {
                <div class="col-lg-5 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:#fafafa">
