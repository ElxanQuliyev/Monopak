                            <div class="row align-items-center">
                                <img class="img-fluid" src="@secondCategory.CategoryPhoto" style="object-fit:cover;width:50%" alt="@secondCategory.Name">
                                <div class="col-12 col-md-6 p-2 pl-3">
                                    <div class="category-right text-md-left mt-5 mx-5">
                                        <h5 class="py-2">
                                            @secondCategory.Name
                                        </h5>
                                        <p><em>@secondCategory.Description</em></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            @if (sixthCategory != null)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:#ccc">
                        <a class="text-dark" href="@Url.Action("Productlist","Product",new { id=sixthCategory.GenerateItemNameAsParam()})">
                            <div class="row align-items-center">
                                <img class="img-fluid" src="@sixthCategory.CategoryPhoto" style="object-fit:cover;width:50%" alt="@sixthCategory.Name">
                                <div class="col-12 col-md-6 p-2 pl-3">
                                    <div class="category-right text-md-left mt-5 mx-5">
                                        <h5 class="py-2">
                                            @sixthCategory.Name
                                        </h5>
                                        <p><em>@sixthCategory.Description</em></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }

            @if (fifthCategory != null)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:#fafafa">
                        <a class="text-dark" href="@Url.Action("Productlist","Product",new { id=fifthCategory.GenerateItemNameAsParam()})">
                            <div class="row align-items-center">
                                <img class="img-fluid" src="@fifthCategory.CategoryPhoto" style="object-fit:cover;width:50%" alt="@fifthCategory.Name">
                                <div class="col-12 col-md-6 p-2 pl-3">
                                    <div class="category-right text-md-left mt-5 mx-5">
                                        <h5 class="py-2">
                                            @fifthCategory.Name
                                        </h5>
                                        <p><em>@fifthCategory.Description</em></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            @if (seventhCategory != null)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:green">
                        <a class="text-white" href="@Url.Action("Productlist","Product",new { id=seventhCategory.GenerateItemNameAsParam()})">
                            <div class="row align-items-center">
                                <img class="img-fluid" src="@seventhCategory.CategoryPhoto" style="object-fit:cover;width:50%" alt="@seventhCategory.Name">
                                <div class="col-12 col-md-6 p-2 pl-3">
                                    <div class="category-right text-md-left mt-5 mx-5">
                                        <h5 class="py-2">
                                            @seventhCategory.Name
                                        </h5>
                                        <p><em>@seventhCategory.Description</em></p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
            @if (thirdCategory != null)
            {
                <div class="col-lg-5 col-sm-6">
                    <div class="category-item mt-1" style="height:300px;background:#fff">
                        <a class="text-dark" href="@Url.Action("Productlist","Product",new { id=thirdCategory.GenerateItemNameAsParam()})">
                            <div class="row align-items-center">
                                <img class="img-fluid" src="@thirdCategory.CategoryPhoto" style="object-fit:cover;width:45%" alt="@thirdCategory.Name">
                                <div class="col-12 col-md-6">
                                    <div class="category-right text-md-left  my-5 mx-4">
                                        <h5 class="py-2">
                                            @thirdCategory.Name
                                        </h5>
                                        <p class="">@thirdCategory.Description</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>
<!-- /Category -->


<section id="Products" style="background:#8ac38c">
    <div class="container-fluid">
        <div class="product-header">
            <h1 class="hdmain text-center my-3 text-white">Məhsullar</h1>
        </div>
        <div class="row">
            @foreach (var pro in Model.ProductList)
            {
                <div class="col-lg-3 col-sm-6 my-4">
                    <div class="product-item">
                        <div class="product-img">
                            <img style="height:200px;object-fit:contain;width:100%" src="@pro.ProductPhoto" class="img-fluid" alt="@pro.Name | @pro.ProductCode ">
                        </div>
                        <hr />
                        <div class="px-3 py-1 text-md-left text-center">
                            @Html.Raw(pro.Description)
                        </div>
                        <h4 class="px-3 pb-3 text-md-left text-center">@pro.Name</h4>

                        <b>@pro.ProductCode</b>
                        <div class="my-2 btn-checkout " data-toggle="modal" data-target="#cartModal">
                            <a pro-quantity="@pro.MinCount" style="cursor:pointer" pro-id="@pro.Id" class="btn w-100 btn-lg btn-success d-flex align-items-center justify-content-center" href="#">
                                <img alt="" style="width:8%;color:#fff;pointer-events:none" src="~/FrontPublic/Uploads/shopping-cart.svg" />
                                <span style="pointer-events:none" class="ml-2">Səbətə at</span>
                            </a>
                        </div>
                    </div>
                    
                </div>
            }
        </div>
        <div class="d-flex justify-content-center mt-5">
            <a class="btn btn-light btn-lg text-center" href="@Url.Action("ProductList","Product")">Daha çox məhsul</a>
        </div>
    </div>
</section>
<!-- About Us -->
<section id="AboutUs" class="my-5 py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="about-left">
                    <h2>Biz kimik?</h2>
                    <h5><i>@Model.about.Header</i></h5>
                    <p style="font-size:1.2em" class="my-4">@Model.about.Description</p>
                    @*<a class="btn btn-outline-dark" href="#">Ətraflı</a>*@
                </div>
            </div>
            <div class="col-lg-6 col-sm-6 d-md-block d-none">
                <div class="about-right">
                    <img class="img-fluid" style="border-radius:10px" src="@Model.about.AboutPhoto" alt="">
                </div>
            </div>
        </div>
        <hr>
    </div>
</section>

