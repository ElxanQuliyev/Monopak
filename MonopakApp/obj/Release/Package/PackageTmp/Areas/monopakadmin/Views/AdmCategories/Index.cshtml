@model IEnumerable<MonopakApp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/monopakadmin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">Yeni Yarat</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td width="25%">
        <img src="@item.CategoryPhoto" class="img-thumbnail" alt="Alternate Text" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        <a class="btn btn-warning" href="@Url.Action("Edit","AdmCategories",new { id=item.Id})">
            <i class="far fa-edit"></i>
        </a>&nbsp;&nbsp;&nbsp; 
    </td>
</tr>
}

</table>
