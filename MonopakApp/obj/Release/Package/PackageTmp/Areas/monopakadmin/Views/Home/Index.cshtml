@model MonopakApp.Areas.monopakadmin.ViewModels.AdminHomeVm
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/monopakadmin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row mb-4">
                <div class="col-12 d-flex align-items-center justify-content-between">
                    <h4 class="page-title">Dashboard</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12 card-statistics">
                    <div class="row">
                        <div class="col-12 col-sm-6 col-md-3 grid-margin stretch-card card-tile">
                            <div class="card">
                                <div class="card-body">
                                    <a href="@Url.Action("Index","AdminOrders")">
                                        <div class="d-flex justify-content-between pb-2">
                                            <h5>Sifarişlər</h5>
                                            <i class="fas fa-database"></i>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p class="text-muted">Ümumi sifariş: @Model.TotalOrder</p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 grid-margin stretch-card card-tile">
                            <div class="card">
                                <div class="card-body">
                                    <a href="@Url.Action("Index","AdmCategories")">

                                        <div class="d-flex justify-content-between pb-2">
                                            <h5>Bütün Kateqoriyalar</h5>
                                            <i class="fas fa-chart-bar"></i>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p class="text-muted">Say: @Model.CategoryCount</p>
                                        </div>
                                    </a>
                                </div>
                            </div>

                        </div>
                        <div class="col-12 col-sm-6 col-md-3 grid-margin stretch-card card-tile">
                            <div class="card">
                                <a href="@Url.Action("Index","AdmProducts")">

                                    <div class="card-body">
                                        <div class="d-flex justify-content-between pb-2">
                                            <h5>Bütün Məhsullar</h5>
                                            <i class="fas fa-shopping-cart"></i>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <p class="text-muted">Say:@Model.ProductCount</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        @*<div class="col-12 col-sm-6 col-md-3 grid-margin stretch-card card-tile">
