<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Monopak - Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta content="" name="author">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"><!-- App favicon -->
    <link rel="shortcut icon" href="~/Areas/monopakadmin/BackPublic/assets/images/favicon.ico"><!-- App css -->
    <link href="~/Areas/monopakadmin/BackPublic/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/monopakadmin/BackPublic/assets/css/jquery-ui.min.css" rel="stylesheet">
    <link href="~/Areas/monopakadmin/BackPublic/assets/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="~/Areas/monopakadmin/BackPublic/assets/css/metisMenu.min.css" rel="stylesheet" type="text/css">
    @RenderSection("adminCss", required: false)

    <link href="~/Areas/monopakadmin/BackPublic/assets/css/app.min.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/a58d6456cd.js" crossorigin="anonymous"></script>
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>


</head>

<body>
    <!-- Top Bar Start -->
    <div class="topbar">
        <!-- LOGO -->
        <div class="topbar-left">
            <div class="col-lg-3 col-5">
                <a href="/monopakadmin" class="logo">
                    @*<img src="~/PublicFront/photo/logo.png" alt="Alternate Text" />*@
                    <h3 class="py-2">Monopak</h3>
                </a>
            </div>
        </div>
        <!--end logo-->
        <!-- Navbar -->
        <nav class="navbar-custom">
            <ul class="list-unstyled topbar-nav float-right mb-0">

                <li class="dropdown">
                    <a class="nav-link dropdown-toggle waves-effect waves-light nav-user"
                       data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                        <img src="~/Areas/monopakadmin/BackPublic/assets/images/users/user-1.png" alt="profile-user" class="rounded-circle"> <span class="ml-1 nav-user-name hidden-sm">Monopak Admin <i class="mdi mdi-chevron-down"></i></span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item"
                           href="@Url.Action("Edit","AdmSettings",new { id=1})"><i class="ti-settings text-muted mr-2"></i> Settings</a>

                        <div class="dropdown-divider mb-0"></div><a class="dropdown-item" href="@Url.Action("logout","AdminAccount")">
                            <i class="ti-power-off text-muted mr-2"></i> Logout
                        </a>
                    </div>
                </li>
            </ul>
            <!--end topbar-nav-->
            <ul class="list-unstyled topbar-nav mb-0">
                <li>
                    <button class="nav-link button-menu-mobile waves-effect waves-light">
                        <i class="ti-menu nav-icon"></i>
                    </button>
                </li>

            </ul>
        </nav><!-- end navbar-->
    </div><!-- Top Bar End -->
    <!-- Left Sidenav -->
    <div class="left-sidenav bg-dark navbar-dark">
        <ul class="metismenu left-sidenav-menu">
            <li>
                <a href="javascript: void(0);">
                    <i class="ti-bar-chart"></i><span>Ana Səhifə</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span>
                </a>
                <ul class="nav-second-level" aria-expanded="false">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","AdmTopSliders")">
                            <i class="ti-control-record"></i>Top Slider
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","AdmAboutUs")">
                            <i class="ti-control-record"></i>Haqqımızda
                        </a>
                    </li>

                </ul>
            </li>
            <li class="">
                <a class="nav-link" href="@Url.Action("Index","AdmCategories")">
                    <i class="ti-announcement"></i>Kateqoriyalar
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","AdmProducts")">
                    <i class="ti-layers-alt"></i><span>Məhsullar</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","AdminOrders")">
                    <i class="ti-shopping-cart-full"></i><span>Sifarişlər</span>
                </a>
            </li>
            <li class="">
                <a class="nav-link" href="@Url.Action("Index","Maps")">
                    <i class="ti-map-alt"></i>Map
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index","AdmSettings")">
                    <i class="ti-lock"></i><span>Settings</span>
                </a>

            </li>
        </ul>
    </div><!-- end left-sidenav-->
    <div class="page-wrapper">
        <!-- Page Content-->
        <div class="page-content">
            <div class="container-fluid">
                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12 mt-4">
                        <div class="card">
                            <div class="card-body">

                                @RenderBody()
                            </div>
                        </div>
                        <!--end page-title-box-->
                    </div>
                    <!--end col-->
                </div><!-- end page title end breadcrumb -->
            </div><!-- container -->
            <footer class="footer text-center text-sm-left">
                &copy; Monopak
            </footer>
            <!--end footer-->
        </div><!-- end page content -->
    </div><!-- end page-wrapper -->
    <!-- jQuery  -->
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/datatables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    @RenderSection("adminScripts", required: false)
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/metismenu.min.js"></script>
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/waves.js"></script>
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/feather.min.js"></script>
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/jquery.slimscroll.min.js"></script>
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/jquery-ui.min.js"></script><!-- App js -->
    <script src="~/Areas/monopakadmin/BackPublic/assets/js/app.js"></script>
</body>

</html>