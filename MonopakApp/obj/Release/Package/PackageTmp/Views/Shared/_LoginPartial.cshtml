@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav flex-wrap navbar-right pr-1 pr-md-4">
            <li class="dropdown">
                @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                <ul class="">
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Çıxış</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right pr-1 pr-md-2 m-0 align-items-center" >
        <li class="">
            <a id="loginLink" class="btn btn-outline-primary pt-2" href="@Url.Action("Login","Account",routeValues:null)">
                <span class="mr-1">
                    <i class="fas fa-power-off"></i>
                </span>
            Daxil ol</a>
            
        @*@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })*@</li>
