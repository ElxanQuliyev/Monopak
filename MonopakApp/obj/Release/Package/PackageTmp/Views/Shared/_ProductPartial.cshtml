@model MonopakApp.ViewModels.HomeVm
@using MonopakApp.Models
@foreach (var pro in Model.ProductList)
{
    <div class="col-lg-4 col-sm-6 my-4">
        <div class="product-item">
            <div class="product-img">
                <img style="height:200px;object-fit:contain;width:100%" src="@pro.ProductPhoto" class="img-fluid" alt="">
            </div>
            <hr />
            <div class="px-3 py-1">
                @Html.Raw(pro.Description)
            </div>
            <h4 class="px-3 pb-3">@pro.Name</h4>

            <b>@pro.ProductCode</b>
            <div class="my-2 btn-checkout w-100" data-toggle="modal" data-target="#cartModal">
                <a style="cursor:pointer" pro-id="@pro.Id" class="btn w-100 btn-lg btn-success d-flex align-items-center justify-content-center" href="#">
                    <img style="width:8%;color:#fff;pointer-events:none" src="~/FrontPublic/Uploads/shopping-cart.svg" />
                    <span style="pointer-events:none" class="ml-2">Səbətə at</span>
                </a>
            </div>
        </div>
    </div>
}


